# Gestionale Sanitario - Configurazione Environment
# Copia questo file come .env e configura i valori

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://gestionale_user:PASSWORD_SICURA@localhost:5432/gestionale_sanitario

# ================================
# APP CONFIGURATION
# ================================
NODE_ENV=production
PORT=3000
DOMAIN=biomedicinaintegrata.it

# ================================
# SECURITY SECRETS
# ================================
# Genera con: openssl rand -base64 32
SESSION_SECRET=GENERA_UNA_CHIAVE_SICURA_DI_32_CARATTERI
JWT_SECRET=GENERA_UNA_ALTRA_CHIAVE_SICURA_DI_32_CARATTERI

# ================================
# ADMIN ACCOUNT
# ================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=PASSWORD_ADMIN_SICURA

# ================================
# EMAIL CONFIGURATION
# ================================
# Configurazione SMTP per invio email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tuo-email@gmail.com
EMAIL_PASS=password-app-gmail
EMAIL_FROM=noreply@biomedicinaintegrata.it

# ================================
# SSL CERTIFICATES
# ================================
SSL_CERT_PATH=/etc/letsencrypt/live/biomedicinaintegrata.it/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/biomedicinaintegrata.it/privkey.pem

# ================================
# BACKUP CONFIGURATION
# ================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# ================================
# GOOGLE SERVICES (Opzionale)
# ================================
# Per integrazione Google Calendar
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://biomedicinaintegrata.it/auth/google/callback

# ================================
# SMS SERVICES (Opzionale)
# ================================
# Per invio SMS reminder
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ================================
# MONITORING & LOGGING
# ================================
LOG_LEVEL=info
ENABLE_MORGAN_LOGGING=true
ENABLE_REQUEST_LOGGING=false

# ================================
# PERFORMANCE
# ================================
# Numero di worker per PM2 (auto = CPU cores)
PM2_INSTANCES=max
# Memoria massima per processo (in MB)
PM2_MAX_MEMORY=500

# ================================
# CORS CONFIGURATION
# ================================
CORS_ORIGIN=https://biomedicinaintegrata.it
ALLOWED_ORIGINS=https://biomedicinaintegrata.it,https://www.biomedicinaintegrata.it