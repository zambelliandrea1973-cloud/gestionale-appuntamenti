# Configurazione di emergenza per biomedicinaintegrata.it
DirectoryIndex index.php index.html
Options +FollowSymLinks -Indexes

# Permessi file PHP
<Files "index.php">
    Order allow,deny
    Allow from all
    Require all granted
</Files>

<Files "gestionale-standalone.php">
    Order allow,deny
    Allow from all
    Require all granted
</Files>

# Blocca accesso a file sensibili
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Forza processamento PHP
AddHandler application/x-httpd-php .php

# Configurazione errori
ErrorDocument 403 /index.php
ErrorDocument 404 /index.php

# Header di sicurezza base
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
</IfModule>