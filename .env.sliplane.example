# ==========================================
# 2. STRIPE PAYMENT GATEWAY
# ==========================================
# Modalità TEST (per sviluppo/test)
STRIPE_SECRET_KEY=sk_test_INSERISCI_CHIAVE_TEST
VITE_STRIPE_PUBLIC_KEY=pk_test_INSERISCI_CHIAVE_PUBBLICA_TEST

# Modalità LIVE (per produzione)
STRIPE_SECRET_KEY_LIVE=sk_live_INSERISCI_CHIAVE_LIVE
VITE_STRIPE_PUBLIC_KEY_LIVE=pk_live_INSERISCI_CHIAVE_PUBBLICA_LIVE

# ⚠️ IMPORTANTE: Webhook Secret (da creare DOPO il deploy!)
# 1. Vai su https://dashboard.stripe.com/webhooks
# 2. Aggiungi endpoint: https://TUO-DOMINIO-SLIPLANE.com/api/payments/stripe/webhook
# 3. Seleziona evento: checkout.session.completed
# 4. Copia il "Signing secret" (inizia con whsec_)
STRIPE_WEBHOOK_SECRET=whsec_INSERISCI_DOPO_DEPLOY

# ==========================================
# 3. PAYPAL PAYMENT GATEWAY
# ==========================================
# Modalità TEST (Sandbox)
PAYPAL_CLIENT_ID=INSERISCI_CLIENT_ID_TEST
PAYPAL_CLIENT_SECRET=INSERISCI_CLIENT_SECRET_TEST

# Modalità LIVE (Produzione)
PAYPAL_CLIENT_ID_LIVE=INSERISCI_CLIENT_ID_LIVE
PAYPAL_CLIENT_SECRET_LIVE=INSERISCI_CLIENT_SECRET_LIVE

# ==========================================
# 4. MODALITÀ PAGAMENTO
# ==========================================
# "test" = usa chiavi sandbox/test
# "live" = usa chiavi produzione reali
PAYMENT_MODE=live

# ==========================================
